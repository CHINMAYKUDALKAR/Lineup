# Lineup Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
# TODO: Configure PostgreSQL connection
DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@localhost:5432/YOUR_DATABASE

# ===================
# Redis
# ===================
# TODO: Configure Redis connection for caching and job queues
REDIS_URL=redis://127.0.0.1:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ===================
# JWT & Auth
# ===================
# TODO: Generate secure JWT secret (min 32 chars)
JWT_SECRET=TODO_GENERATE_SECURE_SECRET_MIN_32_CHARS
JWT_ACCESS_TTL=15m
REFRESH_TOKEN_TTL=14d
BCRYPT_SALT_ROUNDS=12

# ===================
# Frontend URL (for emails, redirects)
# ===================
FRONTEND_URL=http://localhost:3000
APP_BASE_URL=http://localhost:4000

# ===================
# Encryption Keys
# ===================
# TODO: Generate 64 hex chars (32 bytes) for AES-256
ENCRYPTION_KEY=TODO_GENERATE_64_HEX_CHAR_ENCRYPTION_KEY_HERE
TOKEN_ENCRYPTION_KEY=TODO_GENERATE_64_HEX_CHAR_TOKEN_KEY_HERE

# ===================
# Email - SMTP
# ===================
# TODO: Configure SMTP settings for email sending
EMAIL_PROVIDER=smtp
SMTP_HOST=TODO_YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=TODO_SMTP_USERNAME
SMTP_PASS=TODO_SMTP_PASSWORD
DEFAULT_FROM_ADDRESS=noreply@example.com
EMAIL_FROM="Lineup" <noreply@example.com>

# ===================
# Email - AWS SES (alternative)
# ===================
# EMAIL_PROVIDER=ses
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=TODO_AWS_KEY
# AWS_SECRET_ACCESS_KEY=TODO_AWS_SECRET
# SES_FROM=noreply@yourdomain.com

# ===================
# Twilio (SMS)
# ===================
# TODO: Configure Twilio for SMS notifications
TWILIO_ACCOUNT_SID=TODO_TWILIO_SID
TWILIO_AUTH_TOKEN=TODO_TWILIO_TOKEN
TWILIO_FROM_NUMBER=+1234567890

# ===================
# Google Calendar Integration
# ===================
# TODO: Configure Google OAuth for calendar sync
GOOGLE_CLIENT_ID=TODO_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=TODO_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:4000/api/integrations/google/callback

# ===================
# Zoho Integration
# ===================
# TODO: Configure Zoho OAuth for ATS integration
ZOHO_CLIENT_ID=TODO_ZOHO_CLIENT_ID
ZOHO_CLIENT_SECRET=TODO_ZOHO_CLIENT_SECRET

# ===================
# S3 / MinIO Storage
# ===================
# TODO: Configure S3-compatible storage for file uploads
S3_ENDPOINT=http://localhost:9000
S3_BUCKET_NAME=lineup-uploads
S3_USE_PATH_STYLE=true
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=TODO_MINIO_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=TODO_MINIO_SECRET_KEY

# ===================
# Application Settings
# ===================
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
